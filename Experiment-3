#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;

    string s;
    cin >> s;   

    unordered_map<int, int> mpp;
    mpp[0] = -1;

    int sum = 0;
    int maxLen = 0;

    for (int i = 0; i < n; i++) {
        if (s[i] == 'P') {
            sum += 1;
        }
        else if (s[i] == 'A') {
            sum -= 1;
        }

        if (mpp.find(sum) != mpp.end()) {
            maxLen = max(maxLen, i - mpp[sum]);
        }
        else {
            mpp[sum] = i;
        }
    }

    cout << maxLen << endl;
    return 0;
}
